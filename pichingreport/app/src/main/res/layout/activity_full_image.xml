<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lsm.pichingreport.FullImage"
    android:weightSum="1"
    android:orientation="vertical">

    <ImageView
        android:layout_width="485dp"
        android:layout_height="260dp"
        android:id="@+id/FullImage"
        android:layout_weight="0.21"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@id/FullImage"
           android:layout_alignLeft="@id/FullImage"
           android:layout_alignTop="@id/FullImage"
           android:gravity="center"
           android:id="@+id/Textvw"
           android:layout_alignRight="@+id/FullImage"
           android:layout_alignEnd="@+id/FullImage" />
    <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="prev"
                android:id="@+id/prev"
                android:layout_column="0"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:id="@+id/nextpt"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="투구이론보기"
        android:id="@+id/animation"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/prev"
        android:layout_toEndOf="@+id/prev" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가상선추가"
        android:id="@+id/line"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가상선 제거"
        android:id="@+id/linedelte"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/line"
        android:layout_toEndOf="@+id/line" />

</RelativeLayout>
