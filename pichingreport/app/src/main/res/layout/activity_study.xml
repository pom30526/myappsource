<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.lsm.pichingreport.study">

 <ImageView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:id="@+id/basicmotion"
     android:layout_toLeftOf="@+id/elbow"
     android:layout_toRightOf="@+id/rightarm"
     android:layout_toEndOf="@+id/rightarm"
     android:layout_below="@+id/headpart" />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="머리"
    android:id="@+id/headpart"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왼다리"
        android:id="@+id/leftleg"
        android:layout_alignTop="@+id/rightleg"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왼팔"
        android:id="@+id/lelftarm"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/basicmotion"
        android:layout_toEndOf="@+id/basicmotion" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="팔꿈치"
        android:id="@+id/elbow"
        android:layout_marginTop="46dp"
        android:layout_alignTop="@+id/basicmotion"
        android:layout_alignLeft="@+id/leftleg"
        android:layout_alignStart="@+id/leftleg" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오른팔"
        android:id="@+id/rightarm"
        android:layout_alignTop="@+id/elbow"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오른다리"
        android:id="@+id/rightleg"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="허리"
        android:id="@+id/Core"
        android:layout_alignTop="@+id/lelftarm"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
